{
  "name": "client-center-watson",
  "version": "1.0.0",
  "description": "Demo of Watson Assistant using Node.js and Typescript for the IBM France Client Center",
  "main": "server.ts",
  "scripts": {
    "start": "node build/server.js",
    "dev": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "test": "mocha -r ts-node/register src/**/*.test.ts"
  },
  "keywords": [
    "Watson",
    "Assistant",
    "Typescript"
  ],
  "author": "hmatheisen",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "ibm-watson": "^4.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.4",
    "chai": "^4.2.0",
    "mocha": "^6.1.2",
    "nodemon": "^1.18.11",
    "ts-node": "^8.0.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.3",
    "typescript-tslint-plugin": "^0.3.1"
  }
}
